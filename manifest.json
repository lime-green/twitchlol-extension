{
  "name": "Twitch League Account Linker",

  "version": "0.0.1",

  "manifest_version": 2,

  "browser_action": {
    "default_title": "That's the tool tip",
    "default_popup": "popup.html"
  },

  "permissions": [
    "tabs",
    "cookies",
    "*://twitch.tv/",
    "*://leagueoflegends.com/"
  ],

  "icons": { "16": "icon_16.png",
    "48": "icon_48.png",
    "128": "icon_128.png" },

  "background": {
    "scripts": ["background.js"],
    "persistent": false
  }
}